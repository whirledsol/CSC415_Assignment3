#include <string>

class Site {
	public:
        Site(int, std::string, std::string, std::string, std::string, long, long);  // Default constructor
        Site(); // empty constructor
        int getId() const;
        long getX() const;
        long getY() const;
        std::string getStatus() const;
        std::string getName() const;
        std::string toString() const;
        bool hasSurroundingContamination() const;
        double getDistance(long, long);
    private:
        int id;
        std::string name;
        std::string status;
        std::string remediationStatus;
        std::string contaminationType;
        long x;
        long y;
		};
